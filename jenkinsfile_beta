pipeline {
    agent { label 'coderize2' }
    environment {
        WORKSPACE_DIR = "${WORKSPACE}/scripts_beta"
    }
    stages {
        stage ('Checkout') {
            steps {
                git branch: 'beta', credentialsId: 'new-token1', url: 'https://gitlab.com/coderizers/app_view/tracemapr.git'
                sh 'ls -l scripts_beta/'
            }
        }

        stage ('Setup Virtual Environment, Install Dependencies') {
            steps {
                sh '''
                chmod +x scripts_beta/setup_virtualenv.sh
                ./scripts_beta/setup_virtualenv.sh
                '''
            }
        }

        stage ('migration') {
            steps {
                sh '''
                chmod +x scripts_beta/run_migration.sh
                ./scripts_beta/run_migration.sh
                '''
            }
        }

        stage ('Setup Gunicorn') {
            steps {
                sh '''
                chmod +x scripts_beta/gunicorn.sh
                ./scripts_beta/gunicorn.sh
                '''
            }
        }
    }
}
